<resources>

    <!-- color begin -->
    <color name="text_color_54_black">#89000000</color>
    <color name="text_color_87_black">#DE000000</color>
    <color name="text_color_54_white">#89FFFFFF</color>
    <color name="text_color_87_white">#DEFFFFFF</color>
    <!-- color end -->

    <!-- dimen begin -->
    <dimen name="text_size_display_4">112sp</dimen>
    <dimen name="text_size_display_3">56sp</dimen>
    <dimen name="text_size_display_2">45sp</dimen>
    <dimen name="text_size_display_1">34sp</dimen>
    <dimen name="text_size_headline">24sp</dimen>
    <dimen name="text_size_title">20sp</dimen>
    <dimen name="text_size_subheading">16sp</dimen>
    <dimen name="text_size_body">14sp</dimen> 如
    <dimen name="text_size_caption">12sp</dimen>

    <dimen name="text_line_space_48pt">48pt</dimen>
    <dimen name="text_line_space_40pt">40pt</dimen>
    <dimen name="text_line_space_32pt">32pt</dimen>
    <dimen name="text_line_space_28pt">28pt</dimen>
