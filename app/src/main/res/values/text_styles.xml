<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- color begin -->
    <color name="text_color_54_black">#89000000</color>
    <color name="text_color_87_black">#DE000000</color>
    <color name="text_color_54_white">#89FFFFFF</color>
    <color name="text_color_87_white">#DEFFFFFF</color>
    <color name="text_color_54_primary">#8900bcd4</color>
    <color name="text_color_87_primary">#DE00bcd4</color>
    <color name="text_color_54_accent">#89ffab40</color>
    <color name="text_color_87_accent">#DEffab40</color>
    <!-- color end -->

    <!-- dimen begin -->
    <dimen name="text_size_display_4">112sp</dimen>
    <dimen name="text_size_display_3">56sp</dimen>
    <dimen name="text_size_display_2">45sp</dimen>
    <dimen name="text_size_display_1">34sp</dimen>
    <dimen name="text_size_headline">24sp</dimen>
    <dimen name="text_size_title">20sp</dimen>
    <dimen name="text_size_subheading">16sp</dimen>
    <dimen name="text_size_body">14sp</dimen>
    <dimen name="text_size_caption">12sp</dimen>

    <dimen name="text_line_space_48pt">48pt</dimen>
    <dimen name="text_line_space_40pt">40pt</dimen>
    <dimen name="text_line_space_32pt">32pt</dimen>
    <dimen name="text_line_space_28pt">28pt</dimen>
    <dimen name="text_line_space_24pt">24pt</dimen>
    <dimen name="text_line_space_20pt">20pt</dimen>
    <!-- dimen end -->

    <style name="XXS.TextAppearance" parent="android:TextAppearance">
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textColorHint">?android:textColorHint</item>
        <item name="android:textColorHighlight">?android:textColorHighlight</item>
        <item name="android:textColorLink">?android:textColorLink</item>
        <item name="android:textSize">@dimen/text_size_body</item>
    </style>
    <style name="XXS.TextAppearance.Body" parent="XXS.TextAppearance">
        <item name="android:textSize">@dimen/text_size_body</item>
        <item name="android:textColor">@color/text_color_87_black</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:lineSpacingMultiplier">1.3</item>
        <item name="android:typeface">serif</item>
    </style>
    <style name="XXS.TextAppearance.Body.Light" parent="XXS.TextAppearance.Body">
        <item name="android:textColor">@color/text_color_54_black</item>
    </style>
    <style name="XXS.TextAppearance.Body.Primary" parent="XXS.TextAppearance">
        <item name="android:textSize">@dimen/text_size_body</item>
        <item name="android:textColor">@color/text_color_87_primary</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:lineSpacingMultiplier">1.3</item>
        <item name="android:typeface">serif</item>
    </style>
    <style name="XXS.TextAppearance.Body.Accent" parent="XXS.TextAppearance">
        <item name="android:textSize">@dimen/text_size_body</item>
        <item name="android:textColor">@color/text_color_87_accent</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:lineSpacingMultiplier">1.3</item>
        <item name="android:typeface">serif</item>
    </style>
    <style name="XXS.TextAppearance.Body.White" parent="XXS.TextAppearance">
        <item name="android:textSize">@dimen/text_size_body</item>
        <item name="android:textColor">@color/text_color_87_white</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:lineSpacingMultiplier">1.3</item>
        <item name="android:typeface">serif</item>
    </style>
    <style name="XXS.TextAppearance.Body.White.Light" parent="XXS.TextAppearance.Body.White">
        <item name="android:textColor">@color/text_color_54_white</item>
    </style>
    <style name="XXS.TextAppearance.Subheading" parent="XXS.TextAppearance">
        <item name="android:textSize">@dimen/text_size_subheading</item>
        <item name="android:textColor">@color/text_color_87_black</item>
        <item name="android:includeFontPadding">false</item>
    </style>
    <style name="XXS.TextAppearance.Subheading.Light" parent="XXS.TextAppearance.Subheading">
        <item name="android:textColor">@color/text_color_54_black</item>
    </style>
    <style name="XXS.TextAppearance.Subheading.White" parent="XXS.TextAppearance">
        <item name="android:textSize">@dimen/text_size_subheading</item>
        <item name="android:textColor">@color/text_color_87_white</item>
        <item name="android:includeFontPadding">false</item>
    </style>
    <style name="XXS.TextAppearance.Subheading.Bold" parent="XXS.TextAppearance.Subheading">
        <item name="android:textStyle">bold</item>
    </style>
    <style name="XXS.TextAppearance.Subheading.Bold.Light" parent="XXS.TextAppearance.Subheading.Light">
        <item name="android:textStyle">bold</item>
    </style>
    <style name="XXS.TextAppearance.Subheading.White.Bold" parent="XXS.TextAppearance.Subheading.White">
        <item name="android:textStyle">bold</item>
    </style>
    <style name="XXS.TextAppearance.Subheading.White.Bold.Light" parent="XXS.TextAppearance.Subheading.White.Bold">
        <item name="android:textColor">@color/text_color_54_white</item>
    </style>
    <style name="XXS.TextAppearance.Caption" parent="XXS.TextAppearance">
        <item name="android:textSize">@dimen/text_size_caption</item>
        <item name="android:textColor">@color/text_color_54_black</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:typeface">sans</item>
    </style>
    <style name="XXS.TextAppearance.Caption.White" parent="XXS.TextAppearance">
        <item name="android:textSize">@dimen/text_size_caption</item>
        <item name="android:textColor">@color/text_color_87_white</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:typeface">sans</item>
    </style>
    <style name="XXS.TextAppearance.Caption.White.Light" parent="XXS.TextAppearance.Caption.White">
        <item name="android:textColor">@color/text_color_54_white</item>
    </style>
</resources>
