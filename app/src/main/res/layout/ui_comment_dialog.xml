<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#99232323"
    android:id="@+id/rl_content">

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/comment_dialog_bg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="取消"
                android:textAppearance="@style/XXS.TextAppearance.Body.Light" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:text="评论"
                android:textAppearance="@style/XXS.TextAppearance.Title" />


            <TextView
                android:id="@+id/tv_send"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="发布"
                android:textAppearance="@style/XXS.TextAppearance.Body.Primary" />
        </LinearLayout>

        <EditText
            android:id="@+id/et_content"
            android:layout_width="260dp"
            android:layout_height="140dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:padding="4dp"
            android:textAppearance="@style/XXS.TextAppearance.Body"
            android:background="@drawable/comment_dialog_editview_bg" />
    </LinearLayout>

</RelativeLayout>
